{
  "name": "sure-utils",
  "version": "1.1.0",
  "description": "A javascript helper-functions package",
  "author": "suressk",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/suressk/sure-utils.git"
  },
  "bugs": {
    "url": "https://github.com/suressk/sure-utils/issues"
  },
  "keywords": [
    "javascript",
    "utils"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "lint": "eslint scripts/**/*.ts src/**/*.ts --fix",
    "build": "unbuild",
    "build:tsc": "rimraf lib/ && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
    "prepare": "husky install",
    "test": "jest",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "push": "ts-node scripts/push.ts",
    "release": "ts-node scripts/release.ts"
  },
  "email": "sure_ssk@outlook.com",
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.0.0",
    "@types/prompts": "^2.0.14",
    "@types/semver": "^7.3.10",
    "conventional-changelog-cli": "^2.2.2",
    "enquirer": "^2.3.6",
    "eslint": "^8.18.0",
    "eslint-config-suressk": "^0.1.1",
    "execa": "4.0.2",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.0",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.2",
    "minimist": "^1.2.6",
    "picocolors": "^1.0.0",
    "prettier": "^2.7.1",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2",
    "semver": "^7.3.7",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "unbuild": "^0.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "ts-node scripts/verify-commit.ts"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": [
      "eslint --fix"
    ]
  }
}
