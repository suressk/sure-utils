{
  "name": "sure-utils",
  "version": "1.0.16-alpha.0",
  "description": "A javascript helper-functions package",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "scripts": {
    "lint": "eslint *.ts .internal/**/*.ts src/**/*.ts",
    "build": "rimraf lib/ && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
    "prepare": "husky install",
    "test": "jest",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "push": "ts-node scripts/push.ts",
    "release": "ts-node scripts/release.ts"
  },
  "keywords": [
    "javascript",
    "utils"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/suressk/sure-utils.git"
  },
  "author": "suressk",
  "email": "sure_ssk@outlook.com",
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.0.0",
    "@types/prompts": "^2.0.14",
    "@types/semver": "^7.3.10",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.28.0",
    "conventional-changelog-cli": "^2.2.2",
    "enquirer": "^2.3.6",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "execa": "4.0.2",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.0",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.2",
    "minimist": "^1.2.6",
    "picocolors": "^1.0.0",
    "prettier": "^2.7.1",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2",
    "semver": "^7.3.7",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "bugs": {
    "url": "https://github.com/suressk/sure-utils/issues"
  },
  "lint-staged": {
    "*.(js,ts)": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "ts-node scripts/verifyCommit.ts"
    }
  }
}
